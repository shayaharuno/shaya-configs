{
    "git.openRepositoryInParentFolders": "never",
    "workbench.activityBar.location": "top",
    "editor.fontFamily": "JetBrainsMono Nerd Font, monospace",
    "editor.fontWeight": "normal",
    "editor.fontVariations": true,
    "editor.fontLigatures": true,
    "editor.fontSize": 17,
    "editor.folding": true,
    "godotTools.editorPath.godot4": "C:\\Users\\shayaharuno\\Documents\\Godot\\Godot_v4.4-beta4_win64.exe",
    "godotTools.inlayHints.gdscript": true,
    "godotTools.scenePreview.previewRelatedScenes": "anyFolder",
    "workbench.colorCustomizations": {
    
        "debugConsole.infoForeground": "#b9b9b9",
        "statusBar.background": "#1E1E27",
        "statusBar.debuggingBackground": "#4F4F82",
        "editorHoverWidget.background": "#121218",
        "debugConsole.warningForeground": "#737383",
    },
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "explorer.confirmDelete": false,
    "editor.codeActionsOnSave": {

    },
    "explorer.confirmDragAndDrop": false,
    "workbench.colorTheme": "Kanagawa Wave",
    "workbench.iconTheme": "file-icons",
    "editor.minimap.enabled": false,
    "extensions.ignoreRecommendations": true,
    "files.exclude": {
        "**/*.import": true,
        "**/*.blend": true,
        "**/*.blend1": true,
        "**/*.aseprite": true,
        "**/*.ase": true,                           
    },
    "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
    "window.customTitleBarVisibility": "windowed",
    "explorer.fileNesting.patterns": {
        "*.gd": "${capture}.tscn, ${capture}.gd.uid",
        "*.gdshader": "${capture}.gdshader.uid"
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "vim.highlightedyank.enable": true,
    "editor.tokenColorCustomizations": {
            "[Kanagawa Wave]": {
                "textMateRules": 
                [
                    {
                        "name": "Constants and enums",
                        "scope": [
                            "variable.other.constant",
                            "variable.other.enummember"
                        ],
                        "settings": {
                            "foreground": "#f89860"
                        }
                    },
                    {
                        "name": "Keyword",
                        "scope": "keyword",
                        "settings": {
                            "foreground": "#957fb8"
                        }
                    },
                    // {
                    //     "name": "Variable",
                    //     "scope": [
                    //         "variable.parameter",
                    //     ],
                    //     "settings": {
                    //         "foreground": "#b8b4d0"
                    //     }
                    // },
                ]
            }
        }

}
