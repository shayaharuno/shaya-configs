{
    "git.openRepositoryInParentFolders": "never",
    "editor.fontFamily": "JetBrainsMono Nerd Font Mono, monospace",
    "editor.fontWeight": "normal",
    "editor.fontVariations": true,
    "editor.fontLigatures": true,
    "editor.fontSize": 19,
    "editor.folding": true,
    "godotTools.editorPath.godot4": "/usr/bin/godot",
    "godotTools.inlayHints.gdscript": true,
    "godotTools.scenePreview.previewRelatedScenes": "anyFolder",
    "workbench.colorCustomizations": {
        
        "statusBar.background": "#eeeeee",
        "statusBar.foreground": "#010101",
        "statusBar.debuggingBackground": "#f3c8c8",
        "editorHoverWidget.background": "#dfdfdf",
        "debugConsole.infoForeground": "#141414",
        "debugConsole.warningForeground": "#737383",
        "debugConsole.sourceForeground": "#2a2a2c",
        "debugConsole.errorForeground": "#802626",
        "editorRuler.foreground": "#e9e9e9",
    },
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "explorer.confirmDelete": false,
    "editor.codeActionsOnSave": {

    },
    "editor.rulers": [90,120],
    "explorer.confirmDragAndDrop": false,
    "workbench.colorTheme": "Github Light Theme - Gray",
    "workbench.iconTheme": "file-icons-colourless",
    "editor.minimap.enabled": false,
    "extensions.ignoreRecommendations": true,
    "files.exclude": {
        ".godot": true,
        ".vscode": true,  
        "**/*.import": true,
        "**/*.blend1": true,
        "**/*.aseprite": true,
        "**/*.ase": true,                           
    },
    "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
    "window.customTitleBarVisibility": "windowed",
    "explorer.fileNesting.patterns": {
        "*.gd": "${capture}.tscn, ${capture}.gd.uid, ${capture}.gdshader, ${capture}.gdshader.uid, ${capture}.blend, ${capture}.tres, ${capture}.png",
        "*.gdshader" : "${capture}.gdshader.uid",
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "vim.highlightedyank.enable": true,
